{
  "name": "@ivankrtv/openapidoc",
  "description": "Lib to generate openApi documentation on ts",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "eslint \"src/**/*.ts\" --quiet",
    "lint:fix": "eslint \"src/**/*.ts\" --fix --quiet",
    "tests": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ivankrtv/OpenApiDoc.git"
  },
  "keywords": [
    "openapi",
    "documentation",
    "generate",
    "typescript",
    "ts"
  ],
  "author": "ivankrtv",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ivankrtv/OpenApiDoc/issues"
  },
  "homepage": "https://github.com/ivankrtv/OpenApiDoc#readme",
  "dependencies": {
    "@fosfad/openapi-typescript-definitions": "^0.0.28",
    "@types/node": "^20.4.10",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-workspaces": "^0.9.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.1",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2"
  },
  "files": [
    "dist"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "modulePaths": [
      "<rootDir>"
    ],
    "rootDir": "./",
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "testTimeout": 5000,
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
